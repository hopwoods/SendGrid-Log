@model IEnumerable<SendGrid_Log.Models.EmailEvent>
@{
    ViewData["Title"] = "ITS SendGrid Email Log";
}

<h2>ITS SendGrid Email Log</h2>
<a href="@Url.Action("LogEvent","Home")" class="btn btn-block bg-primary">Post Events</a>

<div id="SearchOptions">
    <h4>Search</h4>
    <form asp-controller="Home" asp-action="Index" method="post" class="form-inline">
        <input type="hidden" id="pageNo" name="pageNo" value="@ViewBag.pageNo" />
        <input type="text" id="searchString" name="searchString" class="form-control" />
        <select name="showRecords" id="showRecords" class="form-control">
            <option value="10" selected>10</option>
            <option value="20">20</option>
        </select>
        <button type="submit" class="btn btn-primary">Seach</button>
    </form>
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.eventTimestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.response)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.@event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>            
            <th class="email-info">
                Info
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.eventTimestamp)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.response)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.@event)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td class="email-info">
                        <span class="fa fa-info-circle"></span>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">There are no events logged.</td></tr>

        }

    </tbody>
    <tfoot>
        <tr>
            @{ 
                int endRecordNo = 0;
                if (ViewBag.selectedRecords < ViewBag.noOfRecords)
                {
                    endRecordNo = (ViewBag.noOfRecords * (ViewBag.pageNo - 1)) + ViewBag.selectedRecords;
                }
                else
                {
                    endRecordNo = ViewBag.noOfRecords * ViewBag.pageNo;
                }

           }
            <td colspan="3">Showing @ViewBag.startRecordNo to @endRecordNo of @ViewBag.totalRecords</td>
            <td colspan="2">
                @{
                    decimal noOfPages = (ViewBag.totalRecords / ViewBag.noOfRecords);
                    int c = 1;
                    if (ViewBag.pageNo == 0)
                    {
                        ViewBag.pageNo = 1;
                    }
                    while (c <= (noOfPages + 1))
                    {
                        if (ViewBag.pageNo == c)
                        {
                            <span>@ViewBag.pageNo</span>
                        }
                        else
                        {
                            <span>@Html.ActionLink((c).ToString(), "Index", "Home", new { pageNo = c })</span>
                        }

                        c++;
                    }
                }
            </td>
        </tr>
    </tfoot>
</table>